<h1>Video Models</h1>

<table>
  <thead>
    <tr>
      <th>Adult</th>
      <th>Backdrop path</th>
      <th>Belongs to collection</th>
      <th>Budget</th>
      <th>Homepage</th>
      <th>Id</th>
      <th>Imdb</th>
      <th>Original language</th>
      <th>Original title</th>
      <th>Overview</th>
      <th>Popularity</th>
      <th>Poster path</th>
      <th>Release date</th>
      <th>Revenue</th>
      <th>Runtime</th>
      <th>Status</th>
      <th>Tagline</th>
      <th>Video</th>
      <th>Vote average</th>
      <th>Vote count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @video_models.each do |video_model| %>
      <tr>
        <td><%= video_model.adult %></td>
        <td><%= video_model.backdrop_path %></td>
        <td><%= video_model.belongs_to_collection %></td>
        <td><%= video_model.budget %></td>
        <td><%= video_model.homepage %></td>
        <td><%= video_model.id %></td>
        <td><%= video_model.imdb_id %></td>
        <td><%= video_model.original_language %></td>
        <td><%= video_model.original_title %></td>
        <td><%= video_model.overview %></td>
        <td><%= video_model.popularity %></td>
        <td><%= video_model.poster_path %></td>
        <td><%= video_model.release_date %></td>
        <td><%= video_model.revenue %></td>
        <td><%= video_model.runtime %></td>
        <td><%= video_model.status %></td>
        <td><%= video_model.tagline %></td>
        <td><%= video_model.video %></td>
        <td><%= video_model.vote_average %></td>
        <td><%= video_model.vote_count %></td>
        <td><%= link_to 'Show', video_model %></td>
        <td><%= link_to 'Edit', edit_video_model_path(video_model) %></td>
        <td><%= link_to 'Destroy', video_model, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

